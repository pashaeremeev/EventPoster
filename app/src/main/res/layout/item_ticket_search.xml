<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:padding="16dp"
    android:layout_margin="8dp"
    android:elevation="4dp"
    android:theme="@style/BackgroundElement">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTicketPreviewFullName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ФИО"
            android:textSize="18sp"
            android:fontFamily="@font/ubuntu_bold"
            android:maxLines="1"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/tvTicketPreviewEventName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Название мероприятия"
            android:textSize="14sp"
            android:fontFamily="@font/ubuntu_bold"
            android:maxLines="2"
            android:ellipsize="end"/>

    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnChangeTicketStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="Не отмечен"
        app:cornerRadius="8dp"
        android:backgroundTint="@color/purple_200"
        android:fontFamily="@font/ubuntu_bold"
        android:textAllCaps="false"/>

</LinearLayout>