<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EventPoster" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white_500</item>
        <!-- Customize your theme here. -->
        <item name="iconTintMode">@color/black</item>
    </style>
    <style name="BackgroundEventPreviewDesc">
        <item name="android:background">@color/white_200</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:tint">@color/black</item>
    </style>
    <style name="BackgroundElement">
        <item name="android:background">@drawable/rounded</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:backgroundTint">@color/white_200</item>
    </style>
    <style name="DatePicker" parent="Theme.AppCompat.DayNight.Dialog">
        <item name="colorAccent">@color/white_500</item>
        <item name="android:textColorPrimary">@color/black_200</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/DatePickerButton</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/DatePickerButton</item>
    </style>
    <style name="DatePickerButton">
        <item name="android:textColor">@color/black_200</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
    <style name="SearchView">
        <item name="android:textColor">@color/black</item>
        <item name="android:backgroundTint">@color/white_200</item>
    </style>
</resources>